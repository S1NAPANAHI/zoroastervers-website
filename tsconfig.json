{
  "extends": "./config/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@components/*": ["./src/components/*"],
      "@lib/*": ["./src/lib/*"],
      "@styles/*": ["./src/styles/*"],
      "@tests/*": ["./tests/*"],
      "@contexts/*": ["./src/contexts/*"],
      "@app/*": ["./src/app/*"],
      "@types/*": ["./src/types/*"],
      "@data/*": ["./src/data/*"],
      "@services/*": ["./src/services/*"],
      "@utils/*": ["./src/utils/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    ".next/types/**/*.ts",
    ".storybook/**/*.ts"
  ]
}
